{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
